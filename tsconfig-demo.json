{
  "compilerOptions": {
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "strictNullChecks":true,
    "strict": true,
    "target": "es6",
    "module": "es6",
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es2021",
    ]
  },
  "include": [
    "./demo"
  ],
  "exclude": [
    "node_modules",
  ]
}