{
  "compilerOptions": {
    "alwaysStrict": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "strictNullChecks":true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "outDir": "build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es2021",
    ]
  },
  "include": [
    "./src",
    "./demo"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.test.ts",
    "./src/testUtils"
  ]
}